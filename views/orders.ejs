<%- include('./partials/nav.ejs') %>

  <body>
    <h1>Inventory Order Page</h1>
    <ul>
      <% for(let i = 0; i < items.length; i++ ) { %>
        <li>
          <p> Item: <%= items[i].item %> </p> 
          <p> Order Quantity: <%= items[i].order_qty %> </p>
          <p> Total: </p>
          <p> Placed by: <%= items[i].orderPlacedBy %> </p>

          
          <form method="POST" action="/inventory/<%= items[i].id %>?_method=DELETE">
            <button>Delete</button>
          </form>
        </li>
      <% } %>
    </ul>

    <a href="/inventory">Back to Inventory Index</a>
  </body>
</html>
