<%- include('./partials/header.ejs') %>
<%- include('./partials/nav.ejs') %>

<div class='index'>
  <h3>All Items in Stock (Index)</h3>
  <table class="table table-striped table-bordered table-secondary">
    
    <tr>
      <th>Item</th>
      <th>Category</th>
      <th>Quantity in Stock</th>
      <th>Cost to Purchase</th>
      <th></th>
      <th></th>
    </tr>


    
      <% for(let i = 0; i < items.length; i++ ) { %>
        <tr>
          <td href="/inventory/<%=items[i].id%>"> <%= items[i].item %></td>
          <td> <%= items[i].category %> </td>
          <td> <%= items[i].in_stock_qty %> </td>
          <td> <%= items[i].price %> </td>

          <td><a href="/inventory/<%=items[i].id%>/edit">Edit</a></td>

          <td>

          <form method="POST" action="/inventory/<%= items[i].id %>?_method=DELETE">
            <button>Delete</button>
          </form>
          </td>
       </tr> 
      <% } %>
    

    <a href="inventory/new">Create a New Item</a>
  </div>
  </body>
</html>
