<%- include('./partials/header.ejs') %>
<%- include('./partials/nav.ejs') %>

  <body>
    <h1>Edit Product <%= items.name %> </h1>
    <form method="POST" action="/inventory/<%= items.id %>?_method=PUT">
      <!-- NOTE: the form is pre-populated with values from the server  -->
      <label for="item">Name:</label>
      <input type="text" name="item" value="<%=items.item%>"/>
      <label for="category">Category:</label>
      <input type="text" name="category" value="<%=items.category%>"/>
      <label for="unit_size">Unit Size:</label>
      <input type="text" name="unit_size" value="<%=items.unit_size%>"/>
      <label for="in_stock_qty">In Stock Qty:</label>
      <input type="number" name="in_stock_qty" value="<%=items.in_stock_qty%>"/>
      <label for="price">Cost:</label>
      <input type="number" name="price" value="<%=items.price%>"/>    
      
      <input type="submit" name="" value="Submit Changes"/>
    </form>

  </body>
</html>
