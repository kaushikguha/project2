<%- include('./partials/header.ejs') %>
<%- include('./partials/nav.ejs') %>

  <body>
    <h1>Item Show Page</h1>

    <h2>This is the show page for <%= items.item %></h2>

   <p>Name: <%= items.item %> </p>
   <p>Category <%= items.category %> </p>
   <p>Unit Size <%= items.unit_size %> </p>
   <p>In Stock Qty <%= items.in_stock_qty %> </p>
   <p>Unit Price <%= items.price %> </p>
   
   <label for="price">Qty to Purchase:</label>
   <input type="number" name="cost">


   <form method="POST" action="/order/<%= items.id %>/buy/?_method=POST">
   <button>BUY</button>
  </form>



    <a href="/inventory">Back to Inventory Index</a>
    
  </body>
</html>
